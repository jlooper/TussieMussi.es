---
const pathname = Astro.url.pathname;
import logo from "../assets/logo.png?url";
---

<nav class="shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <!-- Left: Logo -->
      <div class="flex">
        <a href="/">
          <img src={logo} alt="Tussie Mussie Creator" class="p-2 h-14 w-12 cursor-pointer" />
        </a>
      </div>

      <!-- Right: Navigation Links -->
      <div class="flex space-x-6">
        <a
          href="/about"
          class="text-white p-4 hover:underline transition-colors duration-200 font-medium"
        >
          About
        </a>
      </div>
    </div>
  </div>
</nav>
